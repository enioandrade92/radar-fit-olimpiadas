generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://root:password@localhost:5432/dbRadarFit?schema=public"
}

model Competition {
  id            Int             @id @default(autoincrement())
  name          String
  status        String
  athleteResult athleteResult[]


  @@map("competition")
}

model athleteResult {
  id              Int         @id @default(autoincrement())
  competition     String
  athlete         String
  value           Float
  measure         String
  competitionId   Int
  competitionName Competition @relation(fields: [competitionId], references: [id])

  @@map("athlete-result")
}
